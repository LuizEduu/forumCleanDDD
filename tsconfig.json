{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 20",
  "_version": "20.10.0",

  "compilerOptions": {
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
     "forceConsistentCasingInFileNames": true,
     "types": [
      "vitest/globals"
     ],  
     "baseUrl": "./",                                  
     "paths": {
      "@/*": ["./src/*"]
     }, 
  }
}